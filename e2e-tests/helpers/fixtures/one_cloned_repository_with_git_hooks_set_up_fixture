#!/usr/bin/env bash
set -e

bats_load_library "fixtures/authenticated_fixture"
bats_load_library "mrt/setup"
bats_load_library "git"
bats_load_library "repositoriesPath"

setup() {
	authenticated_setup

	cloneTestingRepositories "$(testEnvDir)/$(default_repositories_path)" "$(repositoryName)"
	mrtSetupGitHooks
}

teardown() {
	authenticated_teardown
}

repositoryDir() {
	echo "$(testEnvDir)/$(default_repositories_path)/$(repositoryName)"
}

repositoryName() {
  echo "1_TestRepository"
}
